@model IEnumerable<MoroskoWebsite.Models.Final>

@{
    ViewBag.Title = "Index";
    //Prevents null ViewBag error.
    if (ViewBag.AlertFinal == null)
    {
        ViewBag.AlertFinal = false;
    }
}

@if (ViewBag.AlertFinal == true)
{
    <script>
        alert("You must first delete the UserCourse referencing this final first.");
    </script>
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.finalname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.finaldescription)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.finalname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.finaldescription)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
