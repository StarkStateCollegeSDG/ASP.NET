@model IEnumerable<MoroskoWebsite.Models.Course>

@{
    ViewBag.Title = "Index";
    //Prevents null ViewBag error.
    if (ViewBag.AlertCourse == null)
    {
        ViewBag.AlertCourse = false;
    }
}

@if (ViewBag.AlertCourse == true)
{
    <script>
        alert("You must first delete the UserCourse referencing this course first.");
    </script>
}

<h2>Index</h2>
@if (!User.Identity.IsAuthenticated)
{
    <h2>Please sign in to view courses you are enrolled in.</h2>
}

@if (User.IsInRole("Admin"))
{
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.coursename)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.coursedescription)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.ActionLink(item.coursename, "RouteToClass", "Courses", new { classId = item.Id }, null)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.coursedescription)
            </td>

            @if (User.IsInRole("Admin"))
            {
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            }
            else
            {
                <td>
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                </td>
            }

        </tr>
    }

</table>
